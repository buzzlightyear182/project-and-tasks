<% content_for :title, "Sign-Up!" %>

	<%= form_for @user do |user| %>
		<%= user.label :username%>
		<%= user.text_field :username%>
		<%= user.label "Password" %>
		<%= user.password_field :password %>
		<%= user.password_field :password_confirmation %>
		<%= user.label :email%>
		<%= user.text_field :email %>
		<%= user.submit "Sign-up"%>
	<% end %>
